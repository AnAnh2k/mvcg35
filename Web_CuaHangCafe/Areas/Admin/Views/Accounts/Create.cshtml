@model Web_CuaHangCafe.Models.TbTaiKhoan
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container" style="margin-bottom:20px;">
    <div class="row">
        <div class="col-lg-8 col-md-12 col-sm-12">
            <div class="page-header">
                <h3 class="page-title">Thêm Người Dùng</h3>
              
            </div>
        </div>
    </div>
</div>

<hr />
    
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Tên tài khoản -->
            <div class="form-group">
                <label asp-for="TenTaiKhoan" class="control-label">Tên tài khoản</label>
                <input asp-for="TenTaiKhoan" class="form-control" />
                <span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
            </div>

            <!-- Mật khẩu -->
            <div class="form-group">
                <label asp-for="MatKhau" class="control-label">Mật khẩu</label>
                <input asp-for="MatKhau" type="password" class="form-control" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>

            <!-- Nhân viên (Chọn HoTen từ tbNhanVien) -->
            <div class="form-group">
                <label asp-for="MaNhanVien" class="control-label">Nhân viên (Họ tên)</label>
                <select asp-for="MaNhanVien" class="form-control" asp-items="ViewBag.MaNhanVien">
                    <option value="">-- Chọn nhân viên --</option>
                </select>
                <span asp-validation-for="MaNhanVien" class="text-danger"></span>
            </div>

            <!-- Quyền (MaQuyen). Nếu không cần nhập tay, bạn có thể để mặc định hoặc tạo dropdown -->
            <div class="form-group">
                <label asp-for="MaQuyen" class="control-label">Quyền</label>
                <select asp-for="MaQuyen" class="form-control" asp-items="ViewBag.MaQuyen">
                    <option value="">-- Chọn quyền --</option>
                </select>
                <span asp-validation-for="MaQuyen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay về</a>
</div>