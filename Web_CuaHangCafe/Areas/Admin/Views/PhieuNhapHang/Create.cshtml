@model Web_CuaHangCafe.Models.TbPhieuNhapHang
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm phiếu nhập hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container" style="margin-bottom:20px;">
    <div class="row">
        <div class="col-lg-8 col-md-12 col-sm-12">
            <div class="page-header">
                <h3 class="page-title">Thêm phiếu nhập hàng</h3>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Quán Café</label>
                <select asp-for="MaQuan" class="form-control" asp-items="ViewBag.MaQuan"></select>
                <span asp-validation-for="MaQuan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Nhân viên</label>
                <select asp-for="MaNhanVien" class="form-control" asp-items="ViewBag.MaNhanVien"></select>
                <span asp-validation-for="MaNhanVien" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Nhà cung cấp</label>
                <select asp-for="MaNhaCungCap" class="form-control" asp-items="ViewBag.MaNhaCungCap"></select>
                <span asp-validation-for="MaNhaCungCap" class="text-danger"></span>
            </div>

            @* <div class="form-group"> *@
            @*     <label class="control-label">Ngày lập</label> *@
            @*     <input asp-for="NgayLap" class="form-control" type="datetime-local" /> *@
            @*     <span asp-validation-for="NgayLap" class="text-danger"></span> *@
            @* </div> *@

            <!-- Ẩn trường NgayLap và gán giá trị hiện tại -->
            <input type="hidden" asp-for="NgayLap" />

            <div class="form-group">
                <label class="control-label">Ghi chú</label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay về</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
