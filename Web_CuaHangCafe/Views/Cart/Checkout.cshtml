@model IEnumerable<Web_CuaHangCafe.Models.TbGioHang>

@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a asp-controller="home" asp-action="index">
                        <i class="fa-solid fa-house"></i>
                        Trang chủ
                    </a>
                    <a asp-controller="cart" asp-action="index">Giỏ hàng</a>
                    <span>Thanh toán</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <!-- Form xác nhận thanh toán: gửi dữ liệu qua POST đến action Confirmation -->
        <form asp-controller="cart" asp-action="Confirmation" method="post" class="checkout__form">
            <div class="row">
                <!-- Phần nhập thông tin khách hàng -->
                <div class="col-lg-8">
                    <h5>Chi tiết hoá đơn</h5>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Họ và tên <span>*</span></p>
                                <input type="text" name="customerName" placeholder="Nhập họ và tên" required>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Số điện thoại <span>*</span></p>
                                <input type="tel" pattern="[0-9]{10}" name="phoneNumber" placeholder="Nhập số điện thoại" required>
                            </div>
                            <div class="checkout__form__input">
                                <p>Địa chỉ <span>*</span></p>
                                <input type="text" name="address" placeholder="Nhập địa chỉ" required>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Phần hiển thị đơn hàng của khách hàng -->
                <div class="col-lg-4">
                    <div class="checkout__order">
                        <h5>Đơn hàng của bạn</h5>
                        <div class="checkout__order__product">
                            <ul>
                                <li>
                                    <span class="top__text">Sản phẩm</span>
                                    <span class="top__text__right">Thành tiền</span>
                                </li>
                                @foreach (var item in Model)
                                {
                                    <li class="item">
                                        @* Lấy tên sản phẩm qua thuộc tính điều hướng *@
                                        @item.MaSanPhamNavigation.TenSanPham
                                        <span>
                                            @(item.SoLuong * item.MaSanPhamNavigation.GiaBan) &#8363;
                                        </span>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="checkout__order__total">
                            <ul>
                                <li>Tổng tiền <span>@ViewData["total"] &#8363;</span></li>
                            </ul>
                        </div>
                        <div class="checkout__order__widget">
                            <label for="visa">
                                MasterCard/Visa
                                <input type="radio" id="visa" name="checkoutMethod" value="visa" checked>
                                <span class="checkmark"></span>
                            </label>
                            <label for="banking">
                                Chuyển khoản ngân hàng
                                <input type="radio" id="banking" name="checkoutMethod" value="banking">
                                <span class="checkmark"></span>
                            </label>
                            <label for="wallet">
                                Ví điện tử
                                <input type="radio" id="wallet" name="checkoutMethod" value="wallet">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <button type="submit" class="site-btn">Đặt hàng</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Checkout Section End -->

<script>
    // Đảm bảo script chạy sau khi DOM đã đầy đủ (ở event DOMContentLoaded)
    document.addEventListener("DOMContentLoaded", function () {
        var items = document.querySelectorAll('.item');
        items.forEach(function (item, index) {
            var numberP = document.createElement('p');
            numberP.classList.add('number');
            numberP.textContent = (index + 1) + '. ';
            numberP.style.display = 'inline';
            numberP.style.fontWeight = '500';
            item.insertBefore(numberP, item.firstChild);
        });
    });
</script>
